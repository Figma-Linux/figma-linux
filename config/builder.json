{
  "appId": "figma-linux",
  "productName": "figma-linux",
  "extraMetadata": "main/main.js",
  "icon": "resources/icons",
  "extraFiles": [{
    "from": "lib/"
  }],
  "files": [
    "**/*"
  ],
  "directories": {
    "app": "dist/",
    "buildResources": "build/installers",
    "output": "build/installers"
  },

  "fileAssociations": [
    {
      "ext": "fig",
      "name": "Figma File",
      "role": "Editor"
    }
  ],

  "protocols": [{
    "name": "figma",
    "role": "Viewer",
    "schemes": [
      "figma"
    ]
  }],
  
  "rpm": {
    "fpm": [
      "--rpm-rpmbuild-define=_build_id_links none"
    ]
  },

  "pacman": {
    "depends": []
  },

  "appImage": {
    "category": "Graphics",
    "desktop": "resources/figma-linux-appimage.desktop"
  },

  "linux": {
    "description": "Unofficial desktop application for linux",
    "icon": "resources/icons",
    "category": "Graphics",
    "packageCategory": "Graphics",
    "maintainer": "Chugunov Roman <Zebs-BMK@yandex.ru>",
    "artifactName": "${name}_${version}_${platform}_${arch}.${ext}",
    "fileAssociations": [
      {
        "ext": "fig",
        "name": "Figma File",
        "role": "Editor"
      }
    ],
    "target": [
      {
        "target": "deb"
      },
      {
        "target": "zip"
      },
      {
        "target": "rpm"
      },
      {
        "target": "pacman"
      },
      {
        "target": "appimage"
      }
    ]
  }
}
